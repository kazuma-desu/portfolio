---
const sections = [
    { id: "about", label: "About Me", icon: "fa-user" },
    { id: "skills", label: "Skills & Technologies", icon: "fa-code" },
    { id: "experience", label: "Work Experience", icon: "fa-briefcase" },
    { id: "contact", label: "Contact & Links", icon: "fa-envelope" },
];
---

<div class="command-palette-overlay" id="commandPaletteOverlay">
    <div class="command-palette">
        <div class="command-header">
            <i class="fa-solid fa-terminal"></i>
            <span>Command Palette</span>
            <button class="close-btn" id="closePaletteBtn">
                <i class="fa-solid fa-xmark"></i>
            </button>
        </div>
        <div class="command-search">
            <i class="fa-solid fa-magnifying-glass search-icon"></i>
            <input
                type="text"
                placeholder="Search sections..."
                id="commandSearch"
                autocomplete="off"
            />
        </div>
        <div class="command-list" id="commandList">
            {
                sections.map((section, index) => (
                    <button
                        class="command-item"
                        data-section={section.id}
                        data-index={index}
                    >
                        <i class={`fa-solid ${section.icon} command-icon`} />
                        <span class="command-label">{section.label}</span>
                        <span class="command-shortcut">Enter</span>
                    </button>
                ))
            }
        </div>
        <div class="command-footer">
            <div class="command-hint">
                <kbd>↑</kbd><kbd>↓</kbd> Navigate
            </div>
            <div class="command-hint">
                <kbd>Enter</kbd> Select
            </div>
            <div class="command-hint">
                <kbd>Esc</kbd> Close
            </div>
        </div>
    </div>
</div>

<style>
    .command-palette-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(8px);
        z-index: 9999;
        display: none;
        align-items: flex-start;
        justify-content: center;
        padding-top: 10vh;
        animation: fadeIn 0.2s ease;
    }

    .command-palette-overlay.active {
        display: flex;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .command-palette {
        background: linear-gradient(
            135deg,
            rgba(26, 22, 37, 0.95),
            rgba(15, 11, 20, 0.95)
        );
        border: 2px solid rgba(192, 176, 255, 0.3);
        border-radius: 1rem;
        width: 90%;
        max-width: 600px;
        box-shadow:
            0 20px 60px rgba(0, 0, 0, 0.5),
            0 0 40px rgba(192, 176, 255, 0.2);
        animation: slideDown 0.3s ease;
        overflow: hidden;
    }

    @keyframes slideDown {
        from {
            transform: translateY(-20px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .command-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.5rem;
        background: rgba(192, 176, 255, 0.1);
        border-bottom: 1px solid rgba(192, 176, 255, 0.2);
        color: #c0b0ff;
        font-weight: 600;
        font-size: 1rem;
    }

    .close-btn {
        margin-left: auto;
        background: transparent;
        border: none;
        color: #e8e2ff;
        font-size: 1.5rem;
        cursor: pointer;
        padding: 0.25rem;
        transition: color 0.2s ease;
    }

    .close-btn:hover {
        color: #ffaddb;
    }

    .command-search {
        position: relative;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid rgba(192, 176, 255, 0.1);
    }

    .search-icon {
        position: absolute;
        left: 2rem;
        top: 50%;
        transform: translateY(-50%);
        color: rgba(192, 176, 255, 0.5);
        font-size: 1rem;
    }

    .command-search input {
        width: 100%;
        background: rgba(192, 176, 255, 0.05);
        border: 1px solid rgba(192, 176, 255, 0.2);
        border-radius: 0.5rem;
        padding: 0.75rem 1rem 0.75rem 2.5rem;
        color: #e8e2ff;
        font-family: "Monaspace Neon", monospace;
        font-size: 1rem;
        outline: none;
        transition: all 0.2s ease;
    }

    .command-search input:focus {
        background: rgba(192, 176, 255, 0.1);
        border-color: rgba(192, 176, 255, 0.4);
        box-shadow: 0 0 0 3px rgba(192, 176, 255, 0.1);
    }

    .command-search input::placeholder {
        color: rgba(192, 176, 255, 0.4);
    }

    .command-list {
        max-height: 400px;
        overflow-y: auto;
        padding: 0.5rem;
    }

    .command-list::-webkit-scrollbar {
        width: 8px;
    }

    .command-list::-webkit-scrollbar-track {
        background: rgba(192, 176, 255, 0.05);
    }

    .command-list::-webkit-scrollbar-thumb {
        background: rgba(192, 176, 255, 0.2);
        border-radius: 4px;
    }

    .command-list::-webkit-scrollbar-thumb:hover {
        background: rgba(192, 176, 255, 0.3);
    }

    .command-item {
        width: 100%;
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem 1.25rem;
        background: transparent;
        border: 1px solid transparent;
        border-radius: 0.5rem;
        color: #e8e2ff;
        font-family: "Monaspace Neon", monospace;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s ease;
        text-align: left;
    }

    .command-item:hover,
    .command-item.selected {
        background: rgba(192, 176, 255, 0.1);
        border-color: rgba(192, 176, 255, 0.3);
        transform: translateX(4px);
    }

    .command-item.hidden {
        display: none;
    }

    .command-icon {
        color: #c0b0ff;
        font-size: 1.25rem;
        width: 1.5rem;
        text-align: center;
    }

    .command-label {
        flex: 1;
    }

    .command-shortcut {
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
        background: rgba(192, 176, 255, 0.1);
        border: 1px solid rgba(192, 176, 255, 0.2);
        border-radius: 0.25rem;
        color: rgba(192, 176, 255, 0.7);
    }

    .command-footer {
        display: flex;
        gap: 1.5rem;
        padding: 0.75rem 1.5rem;
        background: rgba(192, 176, 255, 0.05);
        border-top: 1px solid rgba(192, 176, 255, 0.1);
        font-size: 0.875rem;
        color: rgba(192, 176, 255, 0.6);
    }

    .command-hint {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .command-hint kbd {
        padding: 0.25rem 0.5rem;
        background: rgba(192, 176, 255, 0.1);
        border: 1px solid rgba(192, 176, 255, 0.2);
        border-radius: 0.25rem;
        font-family: "Monaspace Neon", monospace;
        font-size: 0.75rem;
    }

    @media (max-width: 768px) {
        .command-palette {
            width: 95%;
            max-width: none;
        }

        .command-footer {
            flex-wrap: wrap;
            gap: 0.75rem;
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .command-palette-overlay,
        .command-palette {
            animation: none;
        }
        .command-item:hover,
        .command-item.selected {
            transform: none;
        }
    }
</style>
