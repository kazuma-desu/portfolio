<!-- About Window -->
<div class="floating-window" id="window-about" data-window="about">
    <div class="window-header" data-drag-handle>
        <div class="flex items-center justify-between w-full">
            <div class="flex gap-2">
                <button
                    class="terminal-dot terminal-dot-red cursor-pointer window-close"
                    data-action="close"
                    aria-label="Close window"></button>
                <button
                    class="terminal-dot terminal-dot-yellow cursor-pointer window-minimize"
                    data-action="minimize"
                    aria-label="Minimize window"></button>
                <button
                    class="terminal-dot terminal-dot-green cursor-pointer window-maximize"
                    data-action="maximize"
                    aria-label="Maximize window"></button>
            </div>
            <div
                class="flex-1 text-center text-terminal-100/70 text-sm font-mono select-none"
            >
                kavintha@devops: ~/about
            </div>
            <div class="w-16"></div>
        </div>
    </div>
    <div class="window-content">
        <div class="window-inner">
            <Hero />
        </div>
    </div>
</div>

