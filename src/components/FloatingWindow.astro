<style>
  .floating-window {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    max-width: 1200px;
    max-height: 85vh;
    background: linear-gradient(135deg, rgba(30, 30, 46, 0.98), rgba(24, 24, 37, 0.98));
    border: 2px solid rgba(180, 190, 254, 0.3);
    border-radius: 1rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5), 0 0 40px rgba(180, 190, 254, 0.2);
    z-index: 1000;
    display: none;
    flex-direction: column;
    opacity: 0;
    animation: windowSlideIn 0.4s ease forwards;
  }

  .floating-window.active {
    display: flex;
  }

  .floating-window.maximized {
    width: 100vw;
    max-width: 100vw;
    height: 100vh;
    max-height: 100vh;
    top: 0;
    left: 0;
    transform: none;
    border-radius: 0;
    transition: all 0.3s ease;
  }

  .floating-window.minimized .window-content {
    display: none;
  }

  .floating-window.minimized {
    max-height: auto;
    height: auto;
  }

  @keyframes windowSlideIn {
    from {
      opacity: 0;
      transform: translate(-50%, -48%) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
  }

  .floating-window.closing {
    animation: windowSlideOut 0.3s ease forwards;
  }

  @keyframes windowSlideOut {
    from {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
    to {
      opacity: 0;
      transform: translate(-50%, -48%) scale(0.95);
    }
  }

  .window-header {
    background: rgba(180, 190, 254, 0.1);
    border-bottom: 1px solid rgba(180, 190, 254, 0.2);
    padding: 0.75rem 1.5rem;
    border-radius: 1rem 1rem 0 0;
    cursor: move;
    user-select: none;
  }

  .floating-window.maximized .window-header {
    border-radius: 0;
  }

  .window-content {
    flex: 1;
    overflow-y: auto;
    padding: 2rem;
    scrollbar-width: thin;
    scrollbar-color: rgba(180, 190, 254, 0.3) rgba(180, 190, 254, 0.1);
  }

  .window-content::-webkit-scrollbar {
    width: 10px;
  }

  .window-content::-webkit-scrollbar-track {
    background: rgba(180, 190, 254, 0.05);
  }

  .window-content::-webkit-scrollbar-thumb {
    background: rgba(180, 190, 254, 0.3);
    border-radius: 5px;
  }

  .window-content::-webkit-scrollbar-thumb:hover {
    background: rgba(180, 190, 254, 0.4);
  }

  .terminal-dot {
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 50%;
    transition: all 0.2s ease;
  }

  .terminal-dot:hover {
    transform: scale(1.2);
  }

  .terminal-dot-red {
    background: #f38ba8;
  }

  .terminal-dot-red:hover {
    box-shadow: 0 0 8px rgba(243, 139, 168, 0.6);
  }

  .terminal-dot-yellow {
    background: #f9e2af;
  }

  .terminal-dot-yellow:hover {
    box-shadow: 0 0 8px rgba(249, 226, 175, 0.6);
  }

  .terminal-dot-green {
    background: #a6e3a1;
  }

  .terminal-dot-green:hover {
    box-shadow: 0 0 8px rgba(166, 227, 161, 0.6);
  }

  @media (max-width: 768px) {
    .floating-window {
      width: 95%;
      max-height: 90vh;
    }

    .window-content {
      padding: 1rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .floating-window {
      animation: none;
    }

    .floating-window.closing {
      animation: none;
    }

    .floating-window.maximized {
      transition: none;
    }
  }
</style>
