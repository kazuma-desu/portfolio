---
const stats = [
	{ label: "Experience", value: "5+ years" },
	{ label: "Projects", value: "100+" },
	{ label: "Specialization", value: "DevOps & Cloud" },
	{ label: "Focus", value: "Linux & Automation" },
];
---

<section id="about" class="mb-12">
    <div class="terminal-body">
        <div class="flex flex-col md:flex-row gap-4 items-center">
            <span class="terminal-prompt">kavintha@devops</span>
            <span class="terminal-command">cat profile.md | less</span>
        </div>
        <div class="terminal-output">
            <div class="space-y-6">
                <div class="typing-container">
                    <h1
                        class="text-4xl md:text-5xl font-bold text-terminal-300 mb-4 typing-effect"
                    >
                        Kavintha Kulasingham
                    </h1>
                    <p
                        class="text-xl md:text-2xl text-terminal-100/90 mb-6 typing-effect-delayed"
                    >
                        Senior DevOps Engineer | Linux Enthusiast | Cloud
                        Architecture Specialist
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
                    <div class="terminal-card group">
                        <h3
                            class="text-terminal-300 text-lg font-semibold mb-4 flex items-center gap-2"
                        >
                            <i class="fas fa-building text-terminal-blue"></i>
                            Current Roles
                        </h3>
                        <ul class="space-y-2">
                            <li class="flex items-start gap-2">
                                <i
                                    class="fas fa-chevron-right text-terminal-blue mt-1.5"
                                ></i>
                                <span
                                    >Senior DevOps Engineer at Fortude Sri Lanka</span
                                >
                            </li>
                            <li class="flex items-start gap-2">
                                <i
                                    class="fas fa-chevron-right text-terminal-blue mt-1.5"
                                ></i>
                                <span
                                    >Cloud Architecture Consultant at IRIS UK</span
                                >
                            </li>
                        </ul>
                    </div>

                    <div class="terminal-card group">
                        <h3
                            class="text-terminal-300 text-lg font-semibold mb-4 flex items-center gap-2"
                        >
                            <i class="fas fa-rocket text-terminal-peach"></i>
                            Current Project
                        </h3>
                        <p class="text-terminal-100/80">
                            Building an innovative startup focused on
                            simplifying cloud operations and making DevOps
                            practices more accessible to businesses.
                        </p>
                    </div>
                </div>

                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-8">
                    {
                        stats.map(({ label, value }) => (
                            <div class="terminal-card text-center group">
                                <div class="text-terminal-accent font-bold text-xl group-hover:text-terminal-300 transition-colors">
                                    {value}
                                </div>
                                <div class="text-terminal-100/70 text-sm mt-1">
                                    {label}
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .typing-container {
        overflow: hidden;
    }

    .typing-effect {
        white-space: nowrap;
        overflow: hidden;
        border-right: 3px solid var(--terminal-accent);
        animation:
            typing 3s steps(40) 1s both,
            blink 1s step-end infinite;
        width: 0;
    }

    .typing-effect-delayed {
        animation-delay: 3s;
    }

    @keyframes typing {
        from {
            width: 0;
        }
        to {
            width: 100%;
        }
    }

    @keyframes blink {
        from,
        to {
            border-color: transparent;
        }
        50% {
            border-color: var(--terminal-accent);
        }
    }
</style>
